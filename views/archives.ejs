<% include header %>
  <div class="container pad-80">

    <div class="body-content">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Archives</h3>
        </div>
        <div class="panel-body">
          <% if (archives.length > 0) { %>
          <table class="table">
            <thead>
              <tr>
                <th>&nbsp;</th>
                <th>Created</th>
                <th>Duration</th>
              </tr>
            </thead>
            <tbody>
              <% archives.forEach(function(item){ %>

              <tr data-item-id="<%= item.id %>">
                <td>
                  <% if ((item.status === "available") && ("url" in item) && (item.url.length > 0)) { %>
                  <a href="/download/<%= item.id %>">
                  <% } %>
                  <%= (item.name || "Untitled") %>
                  <% if ((item.status === "available") && ("url" in item) && (item.url.length > 0)) { %>
                  </a>
                  <% } %>
                </td>
                <td><%= new Date(item.createdAt).toUTCString() %></td>
                <td><%= item.duration %> seconds</td>
              </tr>

              <% }) %>
            </tbody>
          </table>
          <% } else { %>
          <p>There are no archives.</p>
          <% } %>
        </div>
        <div class="panel-footer">
          <% if (showPrevious) { %>
            <a href="<%= showPrevious %>" class="pull-left">&larr; Newer</a>
          <% } %>
          &nbsp;
          <% if (showNext) { %>
            <a href="<%= showNext %>" class="pull-right">Older &rarr;</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
<% include footer %>
